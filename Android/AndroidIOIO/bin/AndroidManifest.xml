<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.camerafileupload"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.kodegeek.frontendioio.MenuMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.kodegeek.frontendioio.WorkerUploadActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.kodegeek.frontendioio.WorkerLoginActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.kodegeek.frontendioio.VisitorLoginActivity"
            android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="net.kodegeek.frontendioio.WorkerMainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.kodegeek.frontendioio.VisitorMainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.kodegeek.frontendioio.VisitorUploadActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>